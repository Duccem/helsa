model MedicalDocument {
  id            String       @id @default(uuid())
  documentType  DocumentType
  description String
  url          String
  fileName     String

  patientId    String
  patient      Patient @relation(fields: [patientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DocumentType {
  MEDICAL_RECORD
  PRESCRIPTION
  LABORATORY_RESULT
  IMAGE
  RADIOLOGY
  OTHER
}